# Programa para calcular la suma de los dígitos de un número

def suma_digitos(numero):
    suma = 0
    while numero > 0:
        digito = numero % 10
        suma += digito
        numero //= 10
    return suma

x= int(input("Introduce un número x1: "))
resultado = suma_digitos(abs(numero))
print(f"La suma de los dígitos es: {resultado}")
